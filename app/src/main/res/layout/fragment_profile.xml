<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/imageChoosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/chooseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="190dp"
            android:text="Choose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageChoosed"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageChoosed"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:text="Name"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="160dp"

            />

        <EditText
            android:id="@+id/emailAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personName"
            android:ems="10"
            android:hint="Email Adress"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="220dp" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailAdress"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="15dp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="284dp" />

        <EditText
            android:id="@+id/postalAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneNumber"
            android:ems="10"
            android:hint="Postal Adress"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/insertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postalAdress"
            android:padding="15dp"
            android:text="Insert Datas" />
    </RelativeLayout>

</ScrollView>